@model IEnumerable<demo.Models.Checkin>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CheckinDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Entrance.EntranceName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Guest.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Hotel.HotelName)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CheckinDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Entrance.EntranceName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Guest.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Hotel.HotelName)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.CheckinId }) |
                @Html.ActionLink("Details", "Details", new { id = item.CheckinId }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.CheckinId })
            </td>
        </tr>
    }

</table>
